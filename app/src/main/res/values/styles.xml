<resources>
    <style name="CalcButtonBase">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">34dp</item>
        <item name="android:minWidth">34dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">fill</item>
        <item name="android:backgroundTint">?attr/colorAccent</item>
    </style>

    <style name="CalcButtonGray" parent="CalcButtonBase">
        <item name="android:backgroundTint">@color/calc_btn_gray</item>
    </style>

    <style name="CalcButtonSmallText" parent="CalcButtonGray">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="CalcButtonDark" parent="CalcButtonBase">
        <item name="android:backgroundTint">@color/calc_btn_dark</item>
    </style>

    <style name="CalcButtonOrange" parent="CalcButtonBase">
        <item name="android:backgroundTint">@color/calc_btn_orange</item>
    </style>

    <style name="CalcButtonEqual" parent="CalcButtonBase">
        <item name="android:backgroundTint">#D76A00</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>